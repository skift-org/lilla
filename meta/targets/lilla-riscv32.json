{
    "$schema": "https://schemas.cute.engineering/stable/cutekit.manifest.target.v1",
    "id": "lilla-riscv32",
    "type": "target",
    "props": {
        "toolchain": "clang",
        "arch": "riscv32",
        "bits": "32",
        "sys": "lilla",
        "abi": "sysv",
        "encoding": "utf8",
        "freestanding": true,
        "host": false
    },
    "tools": {
        "cc": {
            "cmd": "{shell.latest('clang')}",
            "args": [
                "--target=riscv32",
                "-nostdlib",
                "-ffreestanding"
            ]
        },
        "cxx": {
            "cmd": "{shell.latest('clang++')}",
            "args": [
                "--target=riscv32",
                "-nostdlib",
                "-ffreestanding"
            ]
        },
        "ld": {
            "cmd": "{shell.latest('clang')}",
            "args": [
                "--target=riscv32",
                "-nostdlib",
                "-ffreestanding",
                "-Wl,-Tmeta/targets/lilla-riscv32.ld"
            ],
            "files": [
                "meta/targets/lilla-riscv32.ld"
            ]
        },
        "ar": {
            "cmd": "{shell.latest('llvm-ar')}",
            "args": [
                "rcs"
            ]
        },
        "as": {
            "cmd": "{shell.latest('clang')}",
            "args": [
                "--target=riscv32",
                "-c"
            ]
        }
    }
}
